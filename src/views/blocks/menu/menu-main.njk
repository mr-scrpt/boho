<nav
	class="menu-main block-s"
	data-adaptive-width="{{inject.menuBrakePoint}}"
>
	<div class="menu-main__inner block-s__inner">
		<div class="block-s__controller menu-main__controller">
			<div class="menu-main__controller-icon">
				<span class="icon icon_burger"></span>
			</div>

		</div>
		<div class="block-s__body menu-main__box">
			{% set inject = {
					parentClass: "menu-main__login",
					buttonClassJoin: "menu-main__button-join",
					buttonClassIn: "menu-main__button-in"
			}
			%}
			{% include "blocks/login/login-button.njk" %}
			<div class="menu-main__list">
				{% for item in menu.menu_main %}
					{% include "blocks/menu/menu-main-item.njk" %}
				{% endfor %}
			</div>
			<div class="menu-main__closebox">
				<span class="icon icon_close block-s__close menu-main__close"></span>
			</div>
		</div>
	</div>
</nav>